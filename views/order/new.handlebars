<script src="/javascripts/order.js" type="text/javascript"></script>

<div>
<h1 id="formHeader">New Order</h1>

    <form id="orderForm" class="col-md-6" action="/orders" method="POST">
    <div class="form-group row">
            <label for="orderType">Order Type</label>
            <select name="orderType" class="form-control" id="orderType">
                <option value="retail">Retail</option>
                <option value="wholesale">Wholesale</option>
            </select>
        </div>
        <div class="form-group row">
            <label for="shopNo" class="col-md-4 col-form-label">Shop No</label>
            <div class="col-md-8">
                <input name="shopNo" type="text" readonly class="form-control-plaintext" id="shopNo" value="01">
            </div>
        </div>
        <div class="form-group row">
            <label for="weight" class="col-md-4 col-form-label">Weight in KG</label>
            <div class="col-md-8">
                <input required name="weight" type="text" class="form-control" id="weight" placeholder="Weight in KGs">
            </div>
        </div>
        <div class="form-group row">
            <label for="cost" class="col-md-4 col-form-label">Cost</label>
            <div class="col-md-8">
                <input name="cost" type="text" readonly class="form-control-plaintext" id="cost" value="Rs. 0">
            </div>
        </div>
        <div class="form-group row">
            <label for="costPerKg" class="col-md-4 col-form-label">Cost Per KG</label>
            <div class="col-md-8">
                <input name="costPerKg" type="text" readonly class="form-control-plaintext" id="costPerKg" value="220">
            </div>
        </div>
        <div id="buyerDiv" class="form-group row hide">
            <label for="buyer">Buyer</label>
            <select name="buyer" class="form-control" id="buyer">
                <option value="">Select a Buyer from the List</option>
                {{#each foundBuyers}}
                <option value="{{this.buyer_name}}">{{this.buyer_name}}</option>
                {{/each}}
            </select>
        </div>
        <div id="creditDiv" class="form-group row hide">
            <label for="is_credit">Purchase Option</label>
            <select name="is_credit" class="form-control" id="credit">
                <option value="">Select a Payment Option</option>
                <option value="0">Cash</option>
                <option value="1">Credit</option>
            </select>
        </div>
        <div id="discountDiv" class="form-group row hide">
            <label for="discount" class="col-md-4 col-form-label">Discount</label>
            <div class="col-md-8">
                <input name="discount" type="text" class="form-control" id="discount" placeholder="Discount Percentage">
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Place Order</button>
    </form>
</div>