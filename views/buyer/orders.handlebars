<script type="text/javascript">
</script>

<div class="mt-5">
    <div class="content order-table">
        <h4>Total Orders: {{orders.length}}</h4>
        <div class="row mb-5">
            <button id="cashOrders" class="offset-3 col-sm-2 btn btn-primary">Cash Orders</button>
            <button id="creditOrders" class="col-sm-2 offset-2 btn btn-primary">Credit Orders</button>
        </div>
        <table class="table">
        <thead>
            <tr>
            <th scope="col">Order #</th>
            <th scope="col">Shop No.</th>
            <th scope="col">Weight</th>
            <th scope="col">Cost</th>
            <th scope="col">Per Kg</th>
            <th scope="col">Credit</th>
            <th scope="col">Discount</th>
            <th scope="col">Created At</th>
            </tr>
        </thead>
        <tbody>
        {{#each orders}}
            <tr>
            <th scope="row">{{this._id}}</th>
            <td>{{this.shop_no}}</td>
            <td>{{this.weight}}</td>
            <td>{{this.cost}}</td>
            <td>{{this.cost_per_kg}}</td>
            <td>{{this.is_credit}}</td>
            <td>{{this.discount}}</td>
            <td>{{this.created_at}}</td>
            </tr>
        {{/each}}
        </tbody>
        </table>
    </div>
</div>